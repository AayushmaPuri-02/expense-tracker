    <a href="/saving/new" class="btn btn-success">Set Saving Goal</a>
  <% } else { %>
    <ul class="list-group mb-3">
      <li class="list-group-item"><strong>Amount:</strong> â‚¹<%= savingGoal.goalAmount %></li>
