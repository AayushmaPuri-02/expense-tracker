<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/saving-form.css">

<div class="container mt-5">
  <div class="saving-form-container">
    <div class="saving-form-header">
      <h2><i class="fas fa-piggy-bank"></i> Set a New Saving Goal</h2>
    </div>

    <form action="/saving" method="POST">
      <!-- Target Amount -->
      <div class="mb-3">
        <label for="amount" class="form-label">Target Amount (â‚¹)</label>
        <input
          type="number"
          id="amount"
          name="saving[goalAmount]"
          class="form-control"
          required
          min="0"
          placeholder="e.g. 50000"
        />
      </div>

      <!-- Reason -->
      <div class="mb-3">
        <label for="goalReason" class="form-label">Reason</label>
        <input
          type="text"
          class="form-control"
          name="saving[goalReason]"
          placeholder="e.g. Buy a laptop"
          required
        />
      </div>

      <!-- Target Date -->
      <div class="mb-4">
        <label for="targetDate" class="form-label">Target Date</label>
        <input
          type="date"
          class="form-control"
          name="saving[targetDate]"
          required
        />
      </div>

      <!-- Buttons -->
      <div class="d-flex gap-3">
        <button type="submit" class="btn btn-save">
          <i class="fas fa-check-circle me-1"></i> Save Goal
        </button>
        <a href="/saving" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>