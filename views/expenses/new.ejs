<% layout("layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/add-expense.css">

<div class="container py-5">
  <div class="form-container fade-in">
    <div class="form-header">
        <h2>Add New Expense</h2>
        <p>Log your spending to stay on track</p>
      </div>
      
      <!-- ✅ INSERT THIS HERE -->
      <div class="expense-highlight-box mb-4">
        <i class="fas fa-wallet fa-2x me-3"></i>
        <div>
          <h5 class="mb-1 fw-bold">You're adding an Expense</h5>
          <p class="mb-0 text-muted small">Log how you're spending your money and stay in control.</p>
        </div>
      </div>

    <form action="/expenses" method="POST" enctype="multipart/form-data">

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-pen"></i></span>
              <input type="text" name="expense[title]" placeholder="e.g. Grocery shopping" class="form-control" required>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="amount" class="form-label">Amount (₹)</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
              <input type="number" name="expense[amount]" placeholder="e.g. 500" class="form-control" required min="0">
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="category" class="form-label">Category</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-layer-group"></i></span>
          <select name="expense[category]" class="form-select" required>
            <option value="">-- Select Category --</option>
            <option value="Groceries">Groceries</option>
            <option value="Restaurants">Restaurants</option>
            <option value="Coffee & Snacks">Coffee & Snacks</option>
            <option value="Electricity">Electricity</option>
            <option value="Water">Water</option>
            <option value="Internet">Internet</option>
            <option value="Gas">Gas</option>
            <option value="Mobile Bill">Mobile Bill</option>
            <option value="Rent">Rent</option>
            <option value="Home Maintenance">Home Maintenance</option>
            <option value="Property Tax">Property Tax</option>
            <option value="Fuel">Fuel</option>
            <option value="Public Transport">Public Transport</option>
            <option value="Vehicle Maintenance">Vehicle Maintenance</option>
            <option value="Healthcare">Healthcare</option>
            <option value="Insurance">Insurance</option>
            <option value="Gym">Gym</option>
            <option value="Subscriptions">Subscriptions</option>
            <option value="Movies & Events">Movies & Events</option>
            <option value="Gaming">Gaming</option>
            <option value="School Fees">School Fees</option>
            <option value="Courses">Courses</option>
            <option value="Books & Supplies">Books & Supplies</option>
            <option value="Salons & Beauty">Salons & Beauty</option>
            <option value="Clothing">Clothing</option>
            <option value="Emergency Fund">Emergency Fund</option>
            <option value="Mutual Funds">Mutual Funds</option>
            <option value="Fixed Deposit">Fixed Deposit</option>
            <option value="Charity">Charity</option>
            <option value="Birthday Gifts">Birthday Gifts</option>
            <option value="Flights">Flights</option>
            <option value="Hotels">Hotels</option>
            <option value="Vacation Expenses">Vacation Expenses</option>
            <option value="Pet Food">Pet Food</option>
            <option value="Vet Bills">Vet Bills</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <!-- Upload Receipt -->
<div class="form-group">
    <label for="image" class="form-label">Upload Receipt (optional)</label>
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-file-image"></i></span>
      <input class="form-control" type="file" name="image" id="image" accept="image/*">
    </div>
  </div>
  
  <!-- Note -->
  <div class="form-group">
    <label for="note" class="form-label">Note (optional)</label>
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-sticky-note"></i></span>
      <textarea name="expense[note]" class="form-control" rows="2" placeholder="Add any extra details..."></textarea>
    </div>
  </div>
        </div>
      </div>

      <div class="text-center mt-4">
        <a href="/expenses" class="btn btn-secondary me-2">
          <i class="fas fa-times me-1"></i> Cancel
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-plus me-1"></i> Add Expense
        </button>
      </div>
    </form>
  </div>
</div>