<% layout("layouts/boilerplate.ejs") %>

<style>
  .expense-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    background-color: #e6eee7;
    border: 1px solid #c5ccc9;
    box-shadow: 0 4px 8px rgba(5, 30, 18, 0.8);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
    margin-bottom: 1rem;
  }

  .expense-card:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 14px rgba(9, 46, 29, 0.15);
  }

  .expense-img {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #19875422;
  }

  .expense-title {
    flex: 1;
    font-weight: 600;
    font-size: 1rem;
    color: #1c1c1c;
  }

  .expense-amount {
    color: #198754;
    font-weight: 600;
    font-size: 1rem;
  }

  .expense-heading {
    font-weight: bold;
    text-align: center;
    margin-bottom: 1.5rem;
    color: #123c2f;
  }

  .summary-box {
    min-width: 100%;
  }

  @media (min-width: 768px) {
    .summary-box {
      min-width: 100%;
    }
  }
</style>

