<% layout("layouts/boilerplate.ejs") %>

<style>
    body { background: #f8f9fa; }
    .signup-container {
        width: 350px;
        padding: 20px;
        background: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin: auto;
        margin-top: 100px;
    }
</style>

<div class="signup-container">
    <h3 class="text-center">Sign Up</h3>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" id="email" type="email" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" required class="form-control">
        </div>

        <button type="submit" class="btn btn-success w-100">Sign Up</button>
    </form>
    <p class="text-center mt-3">Already have an account? <a href="/login">Login</a></p>
</div>