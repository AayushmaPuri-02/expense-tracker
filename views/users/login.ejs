<% layout("layouts/boilerplate.ejs") %>

<style>
    body { background: #f8f9fa; }
    .login-container {
        width: 350px;
        padding: 20px;
        background: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin: auto;
        margin-top: 100px;
    }
</style>

<div class="login-container">
    <h3 class="text-center">Login to Expense Tracker</h3>
    <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" required class="form-control">
        </div>

        <button class="btn btn-success w-100">Login</button>
    </form>
    <p class="text-center mt-3">Don't have an account? <a href="/signup">Sign Up</a></p>
</div>